<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane minWidth="500.0" prefHeight="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="chaterpillar.launcher.MainWindow">
   <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
      <children>
          <ScrollPane fx:id="scrollPane" fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" hvalue="1.0" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="600.0" vvalue="1.0" VBox.vgrow="ALWAYS">
              <content>
                  <VBox fx:id="dialogContainer" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" style="-fx-background-color: linear-gradient(to bottom, #0093E9, #80D0C7);" />
              </content>
          </ScrollPane>
         <HBox VBox.vgrow="NEVER">
            <children>
                <TextField fx:id="userInput" maxWidth="1.7976931348623157E308" minHeight="40.0" onAction="#handleUserInput" prefHeight="40.0" prefWidth="322.0" promptText="Type here..." HBox.hgrow="ALWAYS" />
                <Button fx:id="sendButton" minHeight="40.0" mnemonicParsing="false" onAction="#handleUserInput" prefHeight="40.0" prefWidth="80.0" text="Send" />
            </children>
         </HBox>
      </children>
   </VBox>
</AnchorPane>
